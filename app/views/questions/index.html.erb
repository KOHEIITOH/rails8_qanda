<div class="container">
  <div class="header">
    <h1><%= link_to 'Q&A mini', questions_path %></h1>
    <%= link_to 'New Question', new_question_path, class: "new-question-btn" %>
  </div>

  <h1>Questions</h1>

  <!--  ▼▼▼ ここからカードリストの構造 ▼▼▼ -->
  <div class="questions-list">
    <% @questions.each do |question| %>
      <div class="question-card">
        <!-- カードの主要部分 -->
        <div class="card-body">
          <h2 class="card-title">
            <%= link_to question.title, question_path(question), class: "card-title-link" %>
          </h2>
          <p class="card-meta">by <%= question.name %></p>
          <p class="card-content"><%= truncate(question.content, length: 100) %></p>
        </div>

        <!-- カードのフッター（操作リンク） -->
        <div class="card-footer">
          <%= link_to 'Show', question_path(question), class: 'card-action-link' %>
          <%= link_to 'Edit', edit_question_path(question), class: 'card-action-link' %>
          <%= link_to 'Destroy', question_path(question), class: 'card-action-link-danger', data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- ▲▲▲ ここまで ▲▲▲ -->
</div>